{
  "name": "perplexity-mcp-server",
  "version": "2.0.0",
  "description": "MCP server using Puppeteer to interact with Perplexity.ai without an API key.",
  "main": "build/cli.js",
  "scripts": {
    "build": "tsc",
    "start": "node build/cli.js",
    "lint": "npx eslint . --ext .ts",
    "check-types": "tsc --noEmit",
    "test": "npx vitest run",
    "test:ui": "npx vitest --ui",
    "format": "npx prettier --write .",
    "prebuild": "pnpm run lint && pnpm run check-types",
    "prepare": "pnpm run lint && pnpm run check-types && pnpm run test",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "perplexity",
    "puppeteer",
    "ai",
    "research"
  ],
  "author": "wysh3",
  "license": "GPL-3.0-or-later",
  "type": "module",
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.11.4",
    "@mozilla/readability": "0.6.0",
    "@types/axios": "0.9.36",
    "@types/jsdom": "21.1.7",
    "@types/mozilla__readability": "0.4.2",
    "axios": "1.9.0",
    "better-sqlite3": "11.10.0",
    "jsdom": "26.1.0",
    "puppeteer": "24.9.0"
  },
  "devDependencies": {
    "@eslint/js": "9.27.0",
    "@types/better-sqlite3": "7.6.13",
    "@types/node": "22.15.19",
    "@typescript-eslint/eslint-plugin": "8.32.1",
    "@typescript-eslint/parser": "8.32.1",
    "eslint": "9.27.0",
    "eslint-config-prettier": "10.1.5",
    "prettier": "3.5.3",
    "typescript": "5.8.3",
    "typescript-eslint": "8.32.1",
    "vitest": "3.1.4"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100,
    "tabWidth": 2
  }
}
