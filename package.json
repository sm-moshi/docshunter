{
  "name": "docshunter",
  "version": "0.3.1",
  "description": "MCP server using Puppeteer to interact with Perplexity.ai without an API key.",
  "main": "build/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node build/main.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "lint": "biome lint . --write",
    "format": "biome format . --write",
    "update-docs-date": "node scripts/update-docs-date.js"
  },
  "keywords": ["mcp", "perplexity", "puppeteer", "ai", "research"],
  "author": "sm-moshi",
  "license": "GPL-3.0-or-later",
  "type": "module",
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.12.0",
    "@mozilla/readability": "0.6.0",
    "@types/axios": "0.9.36",
    "@types/jsdom": "21.1.7",
    "@types/mozilla__readability": "0.4.2",
    "axios": "1.9.0",
    "better-sqlite3": "11.10.0",
    "jsdom": "26.1.0",
    "minimist": "1.2.8",
    "prune": "0.0.2",
    "puppeteer": "24.9.0",
    "zod": "3.25.28"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/better-sqlite3": "7.6.13",
    "@types/minimist": "1.2.5",
    "@types/node": "22.15.21",
    "@vitest/coverage-v8": "3.1.4",

    "typescript": "5.8.3",
    "vitest": "3.1.4"
  }
}
